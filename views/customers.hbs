<!DOCTYPE html>
<html lang="en">

<head>
  <link href="styles.css" rel="stylesheet">
  <title>The Reading Nook Customers</title>
</head>

<body>
  <ul class="nav">
    <li><a href="/">Home</a></li>
    <li><a href="./customers">Customers</a></li>
    <li><a href="./books">Books</a></li>
    <li><a href="./orders">Orders</a></li>
    <li><a href="./order_items">Order Items</a></li>
    <li><a href="./employees">Employees</a></li>
  </ul>

  <h1>The Reading Nook Customers</h1>

  <div>
    <br>
    <br>
    <form id='search-customers-form' method='POST' action='/search-customers-form' class="search-form">
      <label class="search-header">Search for a customer:</label>
      <br>
      <label>by First Name</label>
      <input type="text" placeholder="First Name" name="first_name_entered" id="first_name_entered"
        class="search-field">
      <br>
      <label>by Last Name</label>
      <input type="text" placeholder="Last Name" name="last_name_entered" id="last_name_entered" class="search-field">
      <br>
      <input type="submit" class="search-button">
    </form>
  </div>

  <br>
  <a href="/new_customer">Add a new customer</a>

  <br>
  <a href="/">Return to the Home Page</a>

  <table>
    <caption>Customers</caption>
    <thead>
      <tr>
        <th>Customer ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Street Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip Code</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>

    <tbody>
      {{#each data}}
      <tr>
        <td>{{this.customer_id}}</td>
        <td>{{this.first_name}}</td>
        <td>{{this.last_name}}</td>
        <td>{{this.email}}</td>
        <td>{{this.street_address}}</td>
        <td>{{this.city}}</td>
        <td>{{this.state}}</td>
        <td>{{this.zip_code}}</td>
        <td>
          <form id='edit-customer-form' method='POST' action='/edit-customer-form'>
            <button class="center_button" name="edit_customer_id_selected" id="edit_customer_id_selected"
              value="{{this.customer_id}}">Edit</button>
          </form>
        </td>
        <td>
          <form id='delete-customer-form' method='POST' action='/delete-customer-form'>
            <button class="center_button" name="customer_id_selected" id="customer_id_selected"
              value="{{this.customer_id}}">Delete</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>




</body>

</html>